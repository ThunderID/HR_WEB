<?php namespace App\APIConnector;

use Session;

class APIOrganisation {

	use APITrait;

	function index($org_id, $page, $search, $sort)
	{
		return self::runPost(self::$basic_url . '/organisations/' . $org_id .'/branches/'.$page, ['search' => $search, 'sort' => $sort]);
	}

	function show($org_id, $page)
	{
		return self::runPost(self::$basic_url . '/organisations/show/' . $org_id .'/branches/'.$page, ['search' => $search, 'sort' => $sort]);
	}	
}
